package views

import "github.com/lopesmarcello/vitals/views/components"

templ Layout(title string) {
	<!DOCTYPE html>
	<html lang="en" class="dark">
		@components.Head(title)
		<body class="bg-slate-900 text-slate-50 font-sans antialiased min-h-screen flex flex-col">
			@components.Navbar()
			<!-- Main Content -->
			<main class="flex-grow">
				{ children... }
			</main>
			@components.Footer()
		</body>
	</html>
}
